                </Button>
            </StackPanel>

            <StackPanel Name="spQ6" Height="60" Width="448" Margin="5 5 5 5" Background="FloralWhite" Orientation="Horizontal">
                <TextBlock Name="tbWhen6" Width="87" Margin="3" TextAlignment="Center" VerticalAlignment="Center"
                            FontFamily="Yu Gothic UI Semibold" FontSize="16">
