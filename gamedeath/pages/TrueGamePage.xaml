                </Button>
            </StackPanel>





        </StackPanel>
        <Label Name="lblDateNow" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
               FontFamily="Yu Gothic UI Semibold" FontSize="16" Height="32" Margin="0">
            DateNow
        </Label>
    </Grid>
</Page>
