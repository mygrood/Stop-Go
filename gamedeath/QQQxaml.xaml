<Window x:Class="gamedeath.QQQxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gamedeath"
        mc:Ignorable="d"
        Closing="Window_Closing"
        
        Title="Дай ответ" Height="350" Width="400" Background="LavenderBlush">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="textQ" Grid.Row="0" Margin="15"
                   TextWrapping="Wrap" TextAlignment="Center" FontFamily="Yu Gothic UI Semibold" FontSize="10">text</TextBlock>
        <TextBox Name="answQ" Grid.Row="1" Height="150" Width="350" Margin="0" VerticalAlignment="Top" TextWrapping="Wrap"></TextBox>
        <Button Name="submit" Grid.Row="1" Width="200" Height="40" VerticalAlignment="Bottom" Margin="10 10 10 15"
               Foreground="White" FontFamily="Segoe UI Semibold" FontSize="24"
               IsDefault="True"  HorizontalAlignment="Center"  Background="Black" Click="submit_Click" >
            ОТВЕТИТЬ
        </Button>
    </Grid>
</Window>
